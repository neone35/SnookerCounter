<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
    </style>

    <!-- Button styles -->
    <style name="AppTheme.ButtonRed" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/red400</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.ButtonYellow" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/yellow600</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.ButtonGreen" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/green700</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.ButtonBronze" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.ButtonBlue" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/blue700</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.ButtonPink" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/pink400</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.ButtonBlack" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
